<?xml version="1.0" encoding="utf-8"?><!-- Adding the same root's ID for view binding as other layout configurations -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/student_list_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/container_horizontal_margin"
    android:layout_marginStart="@dimen/container_horizontal_margin"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/student_list"
        android:name="com.example.android.codesampleapp.ui.studentListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.android.codesampleapp.ui.StudentDetailHostActivity"
        tools:listitem="@layout/student_list_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
