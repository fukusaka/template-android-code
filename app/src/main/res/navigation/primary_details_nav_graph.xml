<?xml version="1.0" encoding="utf-8"?>
<navigation
    android:id="@+id/nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/student_list_fragment"
    >

    <fragment
        android:id="@+id/student_list_fragment"
        android:name="com.example.android.codesampleapp.ui.StudentListFragment"
        android:label="studentListFragment"
        >
        <action
            android:id="@+id/show_student_detail"
            app:destination="@id/student_detail_fragment"
            />
    </fragment>
    <fragment
        android:id="@+id/student_detail_fragment"
        android:name="com.example.android.codesampleapp.ui.StudentDetailFragment"
        android:label="student_detail"
        tools:layout="@layout/fragment_student_detail"
        >
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string"
            />
    </fragment>
</navigation>
